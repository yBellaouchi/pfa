{% extends 'base.html.twig' %}

{% block title %}Patient {% endblock %}

{% block body %}
  

    
{#  #}
   {{ form_start(form) }}
   
   <div class="container">
    <div class="row">
               <div class="header">
                   
               </div>
               <div class="body">
                    <div class="input-group" align="right">
                    
                       {{ form_widget(form.FirstName, {'attr': {'class': 'input-group-append','placeholder': 'search your patient'}}) }}
                       {{ form_help(form.FirstName) }}
                       {{ form_errors(form.FirstName) }}
                       <div class="input-group-append">
                       
                       {{ form_widget(form.Search,{'attr': {'class': 'fa fa-search btn btn-primary'}})}}
                       </div>
                       <a href="{{ path('app_patient_new') }}" class="btn btn-secondary float-right"><i class="material-icons">&#xE147;</i> <span>Add New Patient</span></a>
                   </div>
                   

               
                   {{ form_end(form) }} 


    <table class="table table-striped table-hover" class="col-sm-8">
     <thead>

                        <tr>
                             {# <th>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="selectAll">
                                    <label for="selectAll"></label>
                                </span>
                            </th>  #}
                            <th>#</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Cin</th>
                            <th>Gender</th>
                             <th>Tel</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                   <tbody>
                   {% for patient in patients %}
                      <tr>
                             {# <td>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                    <label for="checkbox1"></label>
                                </span>
                            </td>  #}
                            <td>{{ patient.id }}</td>
                            <td>{{ patient.FirstName }}</td>
                            <td>{{ patient.LastName }}</td>
                            <td>{{ patient.Cin }}</td>
                            <td>{{ patient.Gender }}</td>
                            <td>{{ patient.Tel }}</td>
                            <td >
                             <a href="{{ path('app_patient_show', {'id': patient.id}) }}" class="glyphicon glyphicon-cog"><i style="font-size:24px" class="fa">&#xf007;</i></a>
                                <a href="editPatient/{{patient.id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                              <a href="deletePatient/{{patient.id}}" data-toggle="modal" data-target="#delete{{ patient.id}}"class="edit" ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
{# Modal Delete #}
    <div class="modal fade"  id="delete{{patient.id}}">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">suppression</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
         Sure to delete {{ patient.FirstName }} !!
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
           <a href="deletePatient/{{patient.id}}" class="btn btn-primary"><span class="glyphicon glyphicon-trash"></span> delete</a>
        </div>
        
      </div>
    </div>
  </div>

  {% endfor %}
  </tbody>                      
  </table>
    </div>
    </div>
{% endblock %}
