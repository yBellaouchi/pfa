{% extends 'base.html.twig' %}

{% block title %}Doctor index{% endblock %}

{% block body %}
    <h1>Doctor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Password</th>
                <th>Cin</th>
                <th>Roles</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Telelphone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doctor in doctors %}
            <tr>
                <td>{{ doctor.id }}</td>
                <td>{{ doctor.Login }}</td>
                <td>{{ doctor.Password }}</td>
                <td>{{ doctor.Cin }}</td>
                <td>{{ doctor.roles }}</td>
                <td>{{ doctor.FirstName }}</td>
                <td>{{ doctor.LastName }}</td>
                <td>{{ doctor.Telelphone }}</td>
                <td>
                    <a href="{{ path('app_doctor_show', {'id': doctor.id}) }}">show</a>
                    <a href="{{ path('app_doctor_edit', {'id': doctor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_doctor_new') }}">Create new</a>
{% endblock %}
